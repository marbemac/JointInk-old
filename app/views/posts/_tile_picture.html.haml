- cache post do
  .picture

    %a.top{:href => post.primary_channel ? post_via_channel_path(post.primary_channel, post) : post_path(post.id)}
      .image.cover-image{:style => "background-image: url('#{post_photo_path(post, :width => 400, :height => 400, :crop => :limit)}')"}
      .bg
        .caption= post.title