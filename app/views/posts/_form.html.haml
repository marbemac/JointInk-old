= simple_form_for @post, :url => post_path(@post.id) do |f|
  = f.error_notification
  = f.error :base
  = f.error :photo
  = f.error :channel

  .section.title
    .head
      %h5.title Title
      %h5.caption Caption
    .content
      = f.input :title, :label => false, :input_html => {:class => 'copy-over', 'data-target' => '#preview .full #page_title,#preview .teaser h1,#preview .caption', :placeholder => 'Write here...', :autocomplete => 'off'}

  .section.photo
    .head
      %h5 Photo
    .content
      .fileinput-button
        Upload Photo...
        %span.loading
        = f.hidden_field :photo_cache
        = f.file_field :photo, 'data-url' => post_update_photo_path(@post.id), :tabindex => '-1'
      .remove
        Remove Image

  .section.content
    .head
      %h5 Body
    .content
      = f.input :content, :label => false, :input_html => {:autocomplete => 'off'}, :placeholder => 'Write here...'

  = f.input :status, :as => :hidden
  = f.input :post_type, :as => :hidden
  = f.input :channel_id, :as => :hidden

  .actions
    .medium.action.submit.button Publish Post
    .medium.secondary.save-idea.button Save Idea
    = link_to "Delete Post", post_path(@post), :method => :delete, :confirm => 'Are you sure you want to delete this post? No take-backs!', 'data-skip-pjax' => true, :class => 'remove'
    .last-saved!= "last saved #{time_ago(@post.updated_at)}"