%nav#mast-nav
  %a.home{:href => root_url(:host => site_host)}
    %i.icon-home

  .dropdown
    .name
      - if signed_in?
        = "Hi #{current_user.first_name}"
      - else
        Hi Stranger
      %i.icon-chevron-down
    .menu
      %ul
        - if signed_in?
          %li
            %a{:href => new_channel_path, 'data-skip-pjax' => true}
              %i.icon-plus
              New Channel
          %li
            %a{:href => new_post_path('text', 'article'), 'data-skip-pjax' => true}
              %i.icon-plus
              New Article
          %li
            %a{:href => new_post_path('picture', 'caption'), 'data-skip-pjax' => true}
              %i.icon-plus
              New Picture
          %li.divider
          %li
            %a{:href => user_path(current_user)} My Profile
          %li
            %a{:href => user_ideas_path}= "My Ideas (#{current_user.ideas.count})"
          %li
            %a{:href => settings_path}= "Settings"
          %li.logout
            %a{:href => destroy_user_session_url(:host => site_host, 'data-skip-pjax' => true)} Logout
          %li.divider
        - else
          %li
            %a{:href => signin_path} Sign In
          %li
            %a{:href => user_registration_path} Join Now
          %li.divider

        %li
          %a{:href => channels_path} Browse Channels
          %a{:href => "http://www.getthisthat.com/c/about-thisthat/hello-world"} About