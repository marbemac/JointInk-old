%head

  %meta{:charset => "utf-8"}
  %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
  %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
  %title= title
  %meta{:content => description, :name => "description"}
  %meta{:content => "", :name => "author"}

  - @og_tags.each do |k,v|
    %meta{:property => k, :content => v}
  = yield :og_tags

  %link{:rel => 'shortcut icon', :href => '/favicon.ico', :type => 'image/x-icon'}

  %link{:rel => 'stylesheet', :href => '//cdnjs.cloudflare.com/ajax/libs/foundation/3.2.2/stylesheets/foundation.min.css'}
  = stylesheet_link_tag "application", :media => "all"

  = csrf_meta_tags

  %script{:src => '//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js'}
  %script{:type => "text/javascript", :src => "//use.typekit.net/slf6ypd.js"}
  %script try{Typekit.load();}catch(e){}

  -# TODO: this is an ugly way of including the editor js files only on certain pages
  - if params[:controller] == 'posts' && ['edit','new','create','update'].include?(params[:action])
    = stylesheet_link_tag "redactor", :media => "all"

  = yield :head