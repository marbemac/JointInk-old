ul
  li class=(params[:action] == 'show' ? 'on' : '')
    a href=user_url(:subdomain => @user.username)
      i.icon.icon-file-alt
      span.name = pluralize(@user.posts_count, "Post")
  li class=(params[:action] == 'channels' ? 'on' : '')
    a href=user_channels_url(:subdomain => @user.username)
      i.icon.icon-circle-blank
      span.name = pluralize(@user.channels_count, "Channel")
  li class=(params[:action] == 'recommendations' ? 'on' : '')
    a href=user_recommendations_url(:subdomain => @user.username)
      i.icon.icon-plus-sign
      span.name #{@user.recommendations_count} Recommended